<style type="text/css">
    .form-error {
        color: red;
        font-weight: bold;
        padding-bottom:10px;
    }
    .form-error ul {
        margin:0;
    }
</style>

{# Etape 2 #}

<div class="card step_2">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
            <div class="input-field">
                
                {{ form_widget(form.adressBilling.firstName) }}
				{{ form_label(form.adressBilling.firstName, 'Prénom')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.lastName) }}
				{{ form_label(form.adressBilling.lastName, 'Nom')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.adress) }}
				{{ form_label(form.adressBilling.adress, 'Adresse')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.complementaryAdress) }}
				{{ form_label(form.adressBilling.complementaryAdress, 'Complément adr.')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.city) }}
				{{ form_label(form.adressBilling.city, 'Ville')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.zipCode) }}
				{{ form_label(form.adressBilling.zipCode, 'Code Postal')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
               {# {{ form_widget(form.adressBilling.country.country) }} #}
               <select name="countryBilling">
                {% for country in countries %}
                    <option value="{{ country.id }}">{{ country.country}}</option>
                {% endfor %}
               </select>
                <label>Pays</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adressBilling.phone) }}
				{{ form_label(form.adressBilling.phone, 'Téléphone')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.client.mail) }}
				{{ form_label(form.client.mail, 'Email')}}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
               <input type="text">
                <label>confirmation email</label>
                <div class="form-error"></div>
            </div>
        </div>
    </div>
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
            <div class="collapsible-body">
                <div class="input-field">
                    {{ form_widget(form.adressDelivery.firstName, {'required': false}) }}
				{{ form_label(form.adressDelivery.firstName, 'Prénom')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.adressDelivery.lastName, {'required': false}) }}
				{{ form_label(form.adressDelivery.lastName, 'Nom')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                     {{ form_widget(form.adressDelivery.adress, {'required': false}) }}
				{{ form_label(form.adressDelivery.adress, 'Adresse')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.adressDelivery.complementaryAdress, {'required': false}) }}
				{{ form_label(form.adressDelivery.complementaryAdress, 'Complément adr.')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.adressDelivery.city, {'required': false}) }}
				{{ form_label(form.adressDelivery.city, 'Ville')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.adressDelivery.zipCode, {'required': false}) }}
				{{ form_label(form.adressDelivery.zipCode, 'Code Postal')}}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                        {# {{ form_widget(form.adressDelivery.country.country) }} #}
                    <select name="countryDelivery" required="false">
                        {% for country in countries %}
                            <option value="{{ country.id }}">{{ country.country}}</option>
                        {% endfor %}
                    </select>
                    <label>Pays</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   {{ form_widget(form.adressDelivery.phone, {'required': false}) }}
                    {{ form_label(form.adressDelivery.phone, 'Téléphone') }}
                    <div class="form-error"></div>
                </div>
            </div>
        </li>
    </ul>
</div>
{# Etape 3 #}
<div class="card step_3">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 3</span>
        <p class="h6 center-align">Choisissez un paiement</p>
        <ul class="collapsible">
            <li class="active">
                <div class="collapsible-header"><i class="fas fa-credit-card"></i>Payer avec la Carte Bancaire</div>
                <div class="collapsible-body card-form">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" href='{{ path('landing_page') }}' name="paiement" value="lpmonetico" class="btn-large btn-block waves-effect waves-light">Continuer</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                            <img class="responsive-img monetico" src="assets/images/paiement-securise-stripe.jpeg" alt="Stripe protège vos achats">
